<%
  if params['good_or_evil'] == "Good"


    background_path = "#{@base_url}good.jpg"
    content_good = "WELCOME TO PARADISE"
    content_text = "There is a place for everyone"
  else
    background_path = "#{@base_url}evil.jpg"
    content_good = "WELCOME TO HELL"
    content_text = "Hurry up there will not be enough room"

  end
%>


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= background_path %>');">
  <div class="banner-content">
    <% if params['good_or_evil'] == "Good" %>
    <h1><%= "#{content_good}" %></h1>
    <p><%= "#{content_text}" %></p>
    <% else %>
    <h1><%= "#{content_good}" %></h1>
    <p><%= "#{content_text}" %></p>
    <% end  %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @spots.each do |spot| %>
      <div class="col-md-4">
        <div class="card-spot" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= spot.photo.url %>)">
          <div class="card-category"><%= spot.user.name %></div>
          <div class="card-description">
            <h2>Occupation : <%= spot.occupation %></h2>
            <p>Price : <%= spot.price %></p>
          </div>
          <img class="card-user" src=<%= spot.user.photo.url %> alt="Image">
          <%= link_to "toto", spot_path(spot), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

